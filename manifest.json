{
  "manifest_version": 3,
  "name": "Image Hover Preview",
  "version": "3.5",
  "description": "Beautiful image preview on hover. Click extension icon to enable/disable per site.",
  "icons": { "16": "icons/16.png", "32": "icons/32.png", "48": "icons/48.png", "128": "icons/128.png" },
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Toggle Image Hover Preview"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "css": ["styles.css"],
    "run_at": "document_idle"
  }]
}